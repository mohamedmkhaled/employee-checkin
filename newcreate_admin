    <script>
        async function addAdmin() {
            const username = document.getElementById('newUsername').value;
            const password = document.getElementById('newPassword').value;

            if (username && password) {
                try {
                    const response = await fetch('https://your-repl-url.repl.co/api/create-admin', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ username, password })
                    });
                    const result = await response.json();
                    if (result.status === 'success') {
                        alert('Admin created successfully');
                        fetchAdmins();
                        document.getElementById('newUsername').value = '';
                        document.getElementById('newPassword').value = '';
                    } else {
                        alert(result.message);
                    }
                } catch (error) {
                    console.error('Error creating admin:', error);
                }
            } else {
                alert('Please fill out both fields');
            }
        }

        async function fetchAdmins() {
            try {
                const response = await fetch('https://your-repl-url.repl.co/api/admins');
                const admins = await response.json();
                displayAdmins(admins);
            } catch (error) {
                console.error('Error fetching admins:', error);
            }
        }

        function displayAdmins(admins) {
            const table = document.getElementById('adminTable');
            table.innerHTML = '<tr><th>Username</th><th>Password</th><th>Actions</th></tr>';
            admins.forEach((admin, index) => {
                table.innerHTML += `
                    <tr>
                        <td>${admin.username}</td>
                        <td>${admin.password}</td>
                        <td class="actions">
                            <button class="edit-btn" onclick="editAdmin(${index})">Edit</button>
                            <button class="delete-btn" onclick="deleteAdmin(${index})">Delete</button>
                        </td>
                    </tr>
                `;
            });
        }

        async function deleteAdmin(index) {
            const username = document.getElementById('adminTable').rows[index + 1].cells[0].innerText;
            if (confirm('Are you sure you want to delete this admin?')) {
                try {
                    const response = await fetch(`https://your-repl-url.repl.co/api/admins/${username}`, {
                        method: 'DELETE'
                    });
                    if (response.ok) {
                        alert('Admin deleted successfully');
                        fetchAdmins();
                    } else {
                        alert('Failed to delete admin');
                    }
                } catch (error) {
                    console.error('Error deleting admin:', error);
                }
            }
        }

        window.onload = fetchAdmins;
    </script>
